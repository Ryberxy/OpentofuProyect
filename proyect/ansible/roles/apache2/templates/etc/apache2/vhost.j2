<VirtualHost *:80>
	ServerName {{item.datos.nameserver}}
	ServerAdmin webmaster@localhost
	DocumentRoot {{item.datos.documentroot}}

	<Directory {{ item.datos.documentroot }}>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    	</Directory>
	# Alias para phpMyAdmin
    	Alias {{ item.datos.alias }} {{ item.datos.directorio }}

    	<Directory {{ item.datos.directorio }}>
        Options FollowSymLinks
        DirectoryIndex index.php
        Require all granted
    	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/{{item.datos.errorlog}}.log
	CustomLog ${APACHE_LOG_DIR}/{{item.datos.accesslog}}.log combined

</VirtualHost>
